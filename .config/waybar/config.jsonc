{
  "reload_style_on_change": true,
  "height": 32,
  "layer": "top",
  "margin-top": 0,
  "margin-left": 0,
  "margin-right": 0,
  "fixed-center": true,
  "modules-left": ["hyprland/workspaces", "wlr/taskbar", "hyprland/window"],
  "modules-right": [
    "mpris",
    "hyprland/language",
    "group/tray-expander",
    "custom/vpn",
    "network",
    "cpu",
    "bluetooth",
    "pulseaudio",
    "custom/color-picker",
    "custom/swaync",
    "custom/power",
    "clock",
  ],
  "hyprland/workspaces": {
    "all-outputs": false,
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÑë",
      "visible": "ÓÆµ",
      "default": "ÔÜí",
    },
    "on-scroll-up": "hyprctl dispatch workspace e+1 1>/dev/null",
    "on-scroll-down": "hyprctl dispatch workspace e-1 1>/dev/null",
    "sort-by-number": true,
    "active-only": false,
    "persistent-workspaces": {
      "HDMI-A-1": [9, 10],
    },
  },
  "wlr/taskbar": {
    "format": "{icon} {name}",
    "active-first": true,
  },
  "hyprland/window": {
    "format": "{title}",
    "separate-outputs": true,
    "rewrite": {
      "(.*) ‚Äî Mozilla Firefox": "$1",
      "(.*) ‚Äî Zen Browser": "$1",
      "(.*) - Google Chrome": "$1",
      "(.*) - Visual Studio Code": "$1",
      "(.*) - nvim": "$1",
      "kitty": "$1",
      "dev.zed.Zed": "$1",
      "blueman-manager": "Bluetooth Settings",
    },
  },
  "bluetooth": {
    "format": "Ôäî",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Ôäî",
    "tooltip-format": "Devices connected: {num_connections}",
    "on-click": "blueberry",
  },
  "network": {
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
    "format": "{icon}",
    "format-wifi": "{icon}",
    "format-ethernet": "Û∞àÄ",
    "format-disconnected": "Û∞§Æ",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)\n‚á£ {bandwidthDownBytes}  ‚á° {bandwidthUpBytes}",
    "tooltip-format-ethernet": "‚á£ {bandwidthDownBytes}  ‚á° {bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "interval": 3,
    "spacing": 1,
  },
  "cpu": {
    "interval": 5,
    "format": "Û∞çõ",
    "on-click": "kitty -e btop",
  },
  "custom/vpn": {
    "format": "ÔÑ≤",
    "exec": "echo '{\"class\": \"connected\"}'",
    "exec-if": "test -d /proc/sys/net/ipv4/conf/throne-tun",
    "return-type": "json",
    "interval": 5,
    "tooltip": false,
  },
  "custom/swaync": {
    "tooltip": true,
    "format": "{icon}",
    "format-icons": {
      "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-inhibited-none": "Ôá∑",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },
  "hyprland/language": {
    "format": "{}",
    "format-ru": "üá∑üá∫",
    "format-en": "üá∫üá∏",
  },
  "mpris": {
    "format": "{player_icon}  {artist} - {title}",
    "format-paused": "{status_icon}  {artist} - {title}",
    "tooltip-format": "{player}  ({status})\r{artist} - {title}\r\rLeft-Click:   Play / Pause\rMiddle-Click: Previous Track\rRight-Click:  Next Track",
    "title-len": 20,
    "player-icons": {
      "default": "‚ñ∂",
      "mpv": "ÔÄÅ",
      "spotify": "Û∞ìá",
    },
    "status-icons": {
      "paused": "ÔÅå",
      "stopped": "Ôëß",
    },
  },
  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "format": {
        "months": "<span color='#f2f2f2'><b>{}</b></span>",
        "days": "<span color='#f2f2f2'><b>{}</b></span>",
        "weeks": "<span color='#f2f2f2'><b>W{}</b></span>",
        "weekdays": "<span color='#f2f2f2'><b>{}</b></span>",
        "today": "<span color='#f38ba8'><b>{}</b></span>",
      },
    },
  },
  "group/tray-expander": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 600,
      "children-class": "tray-group-item",
    },
    "modules": ["custom/expand-icon", "tray"],
  },
  "custom/expand-icon": {
    "format": "ÔÇã ",
    "tooltip": false,
  },
  "tray": {
    "icon-size": 14,
    "spacing": 12,
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "Û∞ùü",
    "format-bluetooth": "{icon} Ôäî",
    "format-bluetooth-muted": "Û∞ùü Ôäî",
    "format-icons": {
      "headset": "ÔÄ•",
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
    },
    "tooltip": true,
    "tooltip-format": "Playing at {volume}%",
    "on-click": "easyeffects",
  },
  "custom/color-picker": {
    "format": "Ôáª",
    "on-click": "hyprpicker -an",
    "tooltip-format": "Color Picker",
  },
  "custom/power": {
    "format": "ÔÄë",
    "tooltip": false,
    "on-click": "wlogout",
  },
}
